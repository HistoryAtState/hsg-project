<?xml version="1.0" encoding="UTF-8"?>
<ivysettings>
    <properties file="build.properties"/>
    <settings defaultResolver="local-chain"/>
    <version-matchers usedefaults="true">
        <maven-tsnap-vm/>
    </version-matchers>
    <resolvers>
        <ibiblio name="ibiblio-maven2" m2compatible="true"/>
        <ibiblio name="maven" root="http://mvnrepository.com/artifact/" m2compatible="true"/>
        <ibiblio name="evolvedbinary" root="http://repo.evolvedbinary.com/repository/exist-db-snapshots/" m2compatible="true" useMavenMetadata="true"/>
        <url name="exist">
            <artifact pattern="https://raw.github.com/eXist-db/mvn-repo/master/org/[organisation]/[artifact]/[revision]/[artifact]-[revision].[ext]" />
            <artifact pattern="https://raw.github.com/eXist-db/mvn-repo/master/org/[organisation]/thirdparty/[organisation]/[revision]/[artifact]-[revision].[ext]"/>
        </url>
        <chain name="local-chain">
            <resolver ref="maven"/>
            <resolver ref="ibiblio-maven2"/>
            <resolver ref="evolvedbinary"/>
            <resolver ref="exist"/>
        </chain>
    </resolvers>
</ivysettings>